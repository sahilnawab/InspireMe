@model List<Quote>

@{
    ViewData["Title"] = "Admin - All Quotes";
}

<h2>All Quotes (Admin View)</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Author</th>
            <th>Content</th>
            <th>Added By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quote in Model)
        {
            <tr>
                <td>@quote.author</td>
                <td>@quote.content</td>
                <td>@quote.User?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@quote.id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@quote.id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
